---

import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import { systemData } from '~/content/texts';
import Accordion from '~/components/widgets/Accordion.astro';

const metadata = {
  title: 'Herramientas y técnicas utilizadas.',
};

const items = [
  {
    nombre: "Entrevistas estructuradas",
    descripción: "Para identificar problemas en los procesos actuales de inventario y expectativas del sistema."
  },
  {
    nombre: "Encuestas",
    descripción: "Dirigidas al personal para evaluar el conocimiento y las prácticas relacionadas con la gestión de inventarios."
  },
  {
    nombre: "Observación directa",
    descripción: "Seguimiento de las operaciones diarias para mapear los procesos existentes."
  },
  {
    nombre: "Revisión documental",
    descripción: "Análisis de registros actuales de inventarios, ventas y compras para identificar patrones y fallas."
  }
];

const herramientasDeAnálisis = [
  {
    title: "Diagrama de contexto y DFD",
    content: "Representar el sistema actual y proponer flujos de información."
  },
  {
    title: "Diagramas UML (clases, casos de uso, secuencia)",
    content: "Modelar el diseño técnico y funcional del sistema."
  },
  {
    title: "Modelado de base de datos",
    content: "Creación del esquema relacional para el almacenamiento de datos del inventario."
  },
  {
    title: "Prototipos de interfaz",
    content: "Creación de pantallas y menús preliminares para probar la usabilidad."
  }
];

const herramientasTecnologicas = [
  {
    title: "Bases de datos relacionales",
    content: "MySQL o PostgreSQL para la gestión eficiente de datos."
  },
  {
    title: "Lenguajes de programación",
    content: "Python (Django, Flask) o Java (Spring Boot) para el desarrollo del sistema."
  },
  {
    title: "Herramientas de diseño",
    content: "Lucidchart o Figma para crear diagramas y prototipos."
  }
];

---

<Layout metadata={metadata}>
  <Hero tagline={systemData.projectTitle.concat(' ').concat(systemData.company)}>

    <Fragment slot="title">
      <span class="uppercase">Herramientas y técnicas utilizadas.</span>
    </Fragment>

    <Fragment slot="content">
      
      <!-- Técnicas de Recolección de Datos -->
      
      <h1 class="text-xl font-bold text-left !indent-0 list-inside motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        Técnicas de Recolección de Datos:
      </h1>
      
      <div class="max-w-4xl mx-auto mt-1 inset-4">
        {items.map((item, idx) => (
          <Accordion title={item.nombre} content={item.descripción} index={idx} />
        ))}
      </div>

      <!-- Herramientas de Análisis y Diseño -->
      <h1 class="text-xl font-bold text-left !indent-0 list-inside motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        Herramientas de Análisis y Diseño:
      </h1>
      <div class="max-w-4xl mx-auto mt-1 inset-4">
        {herramientasDeAnálisis.map((item, idh) => (
          <Accordion title={item.title} content={item.content} index={items.length + idh} />
        ))}
      </div>

      <!-- Herramientas Tecnológicas -->
      <h1 class="text-xl font-bold text-left !indent-0 list-inside motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        Herramientas Tecnológicas:
      </h1>
      <div class="max-w-4xl mx-auto mt-1 inset-4">
        {herramientasTecnologicas.map((item, idt) => (
          <Accordion title={item.title} content={item.content} index={items.length + herramientasDeAnálisis.length + idt} />
        ))}
      </div>

    </Fragment>

  </Hero>
  
</Layout>
